{
    "projects": ["<rootDir>/shared", "<rootDir>/backend", "<rootDir>/frontend"],
    "collectCoverage": true,
    "coverageDirectory": "./coverage",
    "coverageReporters": ["text", "text-summary", "json", "lcov", "cobertura"],
    "collectCoverageFrom": [
        "./src/**/*.ts",
        "!src/**/index.ts",
        "!src/environments/**",
        "!src/assets/**",
        "!src/polyfills.ts",
        "!src/main.ts",
        "!**/*.module.ts"
    ]
}
